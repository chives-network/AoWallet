{
  "manifest_version": 3,
  "name": "AoWallet & Arweave Wallet",
  "short_name": "AoWallet",
  "version": "0.0.1",
  "description": "Supply AO & AR wallet function, token manage, faucet, lottery.",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "192": "/icons/icon192.png"
  },
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
      "service_worker": "service-worker.js",
      "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content-script.js"]
    }
  ]
}
